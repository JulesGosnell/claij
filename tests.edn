#kaocha/v1
 {:tests [{:id :unit
           :test-paths ["test"]
           :source-paths ["src"]
           :kaocha.filter/skip-meta [:integration :long-running :needs-cuda]}
          {:id :integration
           :test-paths ["test"]
           :source-paths ["src"]
           :kaocha.filter/focus-meta [:integration]
           :kaocha.filter/skip-meta [:long-running :needs-cuda :flaky]}
          {:id :long-running
           :test-paths ["test"]
           :source-paths ["src"]
           :kaocha.filter/focus-meta [:long-running]
           :kaocha.filter/skip-meta [:needs-cuda]}
          {:id :needs-cuda
           :test-paths ["test"]
           :source-paths ["src"]
           :kaocha.filter/focus-meta [:needs-cuda]}]
  :plugins [:kaocha.plugin/profiling
            :kaocha.plugin/filter]
  :cloverage/opts {:ns-exclude-regex ["claij\\.agent.*"
                                      "claij\\.core$"
                                      "claij\\.llm\\.claude"
                                      "claij\\.llm\\.gpt"
                                      "claij\\.llm\\.grok"
                                      "claij\\.llm\\.gemini"
                                      "claij\\.llm\\.open-router"
                                      "claij\\.mcp\\.core"
                                      "claij\\.pipeline.*"
                                      "claij\\.store"
                                      ;; Python-dependent - can't load without libpython
                                      "claij\\.stt\\.whisper\\.audio"
                                      "claij\\.stt\\.whisper\\.python"
                                      "claij\\.tts\\.piper\\.python"
                                      ;; These transitively require Python modules
                                      "claij\\.stt\\.handler"
                                      "claij\\.stt\\.server"
                                      "claij\\.stt\\.record"
                                      "claij\\.tts\\.server"
                                      "claij\\.tts\\.playback"
                                      "claij\\.tts\\.test-playback"]}
  :color? true
  :randomize? false}
